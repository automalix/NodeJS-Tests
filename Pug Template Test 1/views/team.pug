extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/views_styles/team_styles.css")

block content
    .container.my-5
        .row
            each person in card.team
                .col.col-md-4.py-1.text-center
                    .card.border-0
                        img.card-img-top(src=(person.image), alt=(person.name))
                        .card-img-overlay
                            p.card-text.text-center #{person.bio}
                        .card-body
                            h5.card-title #{person.name}
                            p.card-text #{person.title}
