extends layouts/main-layout.pug

block content
    div.container
        form.d-flex.bg-white.flex-column.mx-auto.justify.border.border-secondary.rounded.mt-5.p-5(action="/success", method="POST")
            div.form-group
                label(for='first-name') First Name
                input#first-name.form-control(type='text', placeholder='Your first name', name="first")
            div.form-group
                label(for='last-name') Last Name
                input#last-name.form-control(type='text', placeholder='Your last name', name="last")
            div.form-group
                label(for='email') Email
                input#email.form-control(type='email', name="email", placeholder='Your email address')
            div.form-group
                label(for='comments') Comments
                br
                textarea#comments.form-control.border.border-rounded(name='comments', rows='3', placeholder='Write your comments here')
            div.form-group
                button.btn.btn-primary(type="submit") Submit
    .container.text-center.my-5
        h1.p-highlight Where to find us
        h1.p-topic Our Location
        div.embed-responsive.embed-responsive-16by9.mx-auto.col-lg-8.col-md-8.col-sm-8.col-xs-4.mb-3
            iframe.embed-responsive-item(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2915.8833025329163!2d-89.39665448410153!3d43.04388677914704!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880652cc3af311a3%3A0x7da0e04f9268f42b!2s2040%20S%20Park%20St%2C%20Madison%2C%20WI%2053713!5e0!3m2!1sen!2sus!4v1575834746141!5m2!1sen!2sus', allowfullscreen='')
